{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block meta %}{% endblock %}


{% block body %}
    <section class="min-vh-100">
        <h1 class="text-center">Bienvenue sur notre site web</h1>
        <div class="row justify-content-center m-3">
            <div class="col-7">
                <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for artwork in carousel %}
                            <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index }}" class="{% if loop.index == 1 %}active{% endif %}"></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">

                        {% for artwork in carousel %}
                            <div class="carousel-item {% if loop.index == 1 %}active{% endif %}">
                                <img src="{{ asset('img/artwork/' ~ artwork.picture) }}" class="d-block w-100" alt="Photo de l'oeuvre : {{ artwork.name }}">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ artwork.name }}</h5>
                                    <p>{{ artwork.description }}</p>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


{% block script %}

{% endblock %}