{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block meta %}Contact{% endblock %}


{% block body %}
    <section class="min-vh-100">
        <div class="jumbotron">
            <h1 class="display-4">Contact</h1>
            <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention
                to featured content or information.</p>
            <hr class="my-4">
            <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        </div>
        <div class="row flex-column m-5">
            <div class="col-5">

                {% include 'inc/flashes.html.twig' %}

                {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
                <p>
                    {{ form_label(form.lastname, 'Nom: ') }}
                    {{ form_widget(form.lastname, { attr: { placeholder: 'Saisissez votre nom' } }) }}
                </p>
                <p>
                    {{ form_label(form.email, 'Email: ') }}
                    {{ form_widget(form.email, { attr: { placeholder: 'ex : exemple@exemple.fr' } }) }}
                </p>
                <p>
                    {{ form_label(form.message, 'Message: ') }}
                    {{ form_widget(form.message) }}
                </p>
                <p>
                    <input type="submit" value="Valider" class="btn btn-primary">
                </p>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}


{% block script %}

{% endblock %}